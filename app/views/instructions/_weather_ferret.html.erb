<% show_delete = defined?(delete_option) %>
<% @p = instruction.params || {} %>
<%= form_for instruction do |f| %>
  <%= field_set_tag 'Weather Ferret' do %>
    <%= f.hidden_field :ferret_type, value: "WeatherFerret" %>
    <%= f.fields_for :params do |params_form| %>
      <%= params_form.label :zip, "Watch weather in this zip code" %>
      <%= params_form.text_field :zip, size: 7, value: @p["zip"], class: "span2" %>
      <br />
      <%= params_form.label :term, "Watch for conditions including" %>
      <%= params_form.text_field :term, size: 7, value: @p["term"], class: "span2" %>
      <br />
      <%= params_form.label :high_threshold, "Watch for highs above" %>
      <%= params_form.text_field :high_threshold, size: 3, value: @p["high_threshold"], class: "span2" %>
      <br />
      <%= params_form.label :low_threshold, "Watch for lows below" %>
      <%= params_form.text_field :low_threshold, size: 3, value: @p["low_threshold"], class: "span2" %>
    <% end %>
    <br />
    <%= f.submit %>
    <% if show_delete%>
    <%= button_to "Cancel Instruction", instruction_path(instruction), method: :delete, confirm: "Are you sure you wish to cancel this instruction?" %>
    <% end %>
  <% end %>
<% end %>